@page
@model PRN221_MeVaBe_WebClient.Pages.Users.LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<h2 class="text-center">@ViewData["Title"]</h2>


<div class="container mt-5">
    <h2 class="text-center">@ViewData["Title"]</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Sử dụng col-md-6 để form chiếm 50% chiều rộng trang trên màn hình lớn -->
            <form method="post" class="needs-validation" novalidate>
                <div class="form-group">
                    <label asp-for="Input.Email" class="font-weight-bold">Email:</label>
                    <input asp-for="Input.Email" class="form-control" required />
                    <div class="invalid-feedback">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="font-weight-bold">Mật khẩu:</label>
                    <input asp-for="Input.Password" class="form-control" type="password" required />
                    <div class="invalid-feedback">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}