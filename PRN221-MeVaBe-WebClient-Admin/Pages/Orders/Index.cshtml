@page
@model PRN221_MeVaBe_WebClient_Adminn.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">
                            <i class="bi bi-house-door"></i> Home
                        </a>
                    </li>
                    <!-- Thêm các mục menu khác tương tự -->
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">User Management</h1>
            </div>

            <!-- Search and filter -->
            <div class="row mb-3">
                @* <div class="col-md-6">
                    <input type="text" class="form-control" placeholder="Search by...">
                </div>
                <div class="col-md-4">
                    <button class="btn btn-outline-secondary" type="button">Filter</button>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary" type="button">Add User</button>
                </div> *@
            </div>

            <!-- User table -->
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>User Email</th>
                            <th>Create Date</th>
                            <th>End Date</th>
                            <th>Order Status</th>
                            <th>Phone</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var items in Model.OrderDetail)
                        {
                            <tr>
                                <td>@items.User.Email</td>
                                <td>@items.CreateDate</td>
                                <td>@items.EndDate</td>
                                <td>@items.OrderSatus</td>
                                <td>@items.Phone</td>
                                <td>...</td>
                            </tr>
                        }
                        
                        
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</div>