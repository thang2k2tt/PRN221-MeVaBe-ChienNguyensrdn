<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <!-- Include Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
   @*  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dialog-polyfill/0.5.6/dialog-polyfill.min.css" integrity="sha512-HZ0kt8MhFXB8OCL4Bke0ewhK2l4YolTeqI6HMPkjVb8vQlV0fyLPjY6Ni50qKZ6k3VHRRG63Z8QWubpOdzLwtQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
     *@<script src="https://cdnjs.cloudflare.com/ajax/libs/dialog-polyfill/0.5.6/dialog-polyfill.min.js" integrity="sha512-tQhP9E1zrctCcyMwh72UjVb1bw2fNjXefSkP+6DYY0RE4i+g6KkpSMzBv41wCaxic/bY5wzjzHcC3NwLZHx3gg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- Datatable -->
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 bg-light sidebar">
                <button id="sidebarToggle" class="btn btn-primary" style="margin-left:15px">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Page"].ToString() == "/Index" ? "active" : "")" asp-page="/Index">
                                <i class="fas fa-tachometer-alt"></i> <span>Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Page"].ToString() == "/Product" ? "active" : "")" asp-page="/About">
                                <i class="fas fa-box-open"></i> <span>Products</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Page"].ToString() == "/Orders/Index" ? "active" : "")" asp-page="/Orders/Index">
                                <i class="fas fa-shopping-cart"></i> <span>Orders</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Page"].ToString() == "/Feedback" ? "active" : "")" asp-page="/Contact">
                                <i class="fas fa-comments"></i> <span>Feedbacks</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Products/Index">product</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Category/Index">category</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main role="main" class="col-md-10 ml-sm-auto px-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.getElementById("sidebarToggle").addEventListener("click", function () {
            var sidebar = document.querySelector(".sidebar");
            if (window.innerWidth < 768) {
                sidebar.classList.toggle("active");
            } else {
                sidebar.classList.toggle("collapsed");
                if (sidebar.classList.contains("collapsed")) {
                    sidebar.style.maxWidth = "100px";
                } else {
                    sidebar.style.maxWidth = "250px";
                }
            }
        });
    </script>
</body>
</html>
